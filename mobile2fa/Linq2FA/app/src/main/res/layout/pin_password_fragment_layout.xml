<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="75dp"
        android:id="@+id/pinimg"
        android:layout_centerHorizontal="true"
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:scaleType="fitXY"
        android:src="@drawable/globaltop"

         />

    <TextView
        android:id="@+id/txtbinpasswd"
        android:layout_below="@id/pinimg"
        android:layout_centerHorizontal="true"
        android:text="Enter Your Pin Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/pin_password_txt"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtbinpasswd"
        android:layout_width="wrap_content"
        android:password="true"
        android:hint="Enter Your Pin Password"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/pinBtn"
        android:layout_centerHorizontal="true"
        android:text="App Login"
        android:drawableLeft="@drawable/login"
        android:layout_below="@id/pin_password_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">




    <ImageView
        android:layout_marginTop="75dp"
        android:id="@+id/pinimg"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtbinpasswd"
        android:layout_below="@id/pinimg"
        android:layout_centerHorizontal="true"
        android:text="Enter Your Pin Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/pin_password_txt"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtbinpasswd"
        android:layout_width="wrap_content"
        android:password="true"
        android:hint="Enter Your Pin Password"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/pinBtn"
        android:layout_centerHorizontal="true"
        android:text="Account Login"
        android:drawableLeft="@drawable/login"
        android:layout_below="@id/pin_password_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>